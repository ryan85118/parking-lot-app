<Window x:Name="window"
    x:Class="parking_lot_app.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    prism:ViewModelLocator.AutoWireViewModel="True" HorizontalAlignment="Left" VerticalAlignment="Top" Height="720" Width="1280">
    <Grid Width="{Binding SizeToContent, ElementName=window}" Height="{Binding SizeToContent, ElementName=window}">
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
